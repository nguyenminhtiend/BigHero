@model HvN.BigHero.DAL.Model.TableDetailViewModel

<h3><span class="glyphicon glyphicon-plus-sign" aria-hidden="true"></span> Create new table</h3>
<hr>
@using (Html.BeginForm("CreateTable", "Table", FormMethod.Post, new { id = "createTable-form" }))
{
    <div class="row">
        <div class="col-md-2">
            <label class="mandatory">Table name:</label>
        </div>
        <div class="col-md-4">
            <input type="text" class="form-control" name="tableName" id="tableName">
        </div>
        <div class="col-md-6">
            <img src="@Url.Content("~/Content/img/loading.gif")" alt="loading" id="loading" style="display: none" />
            <img src="@Url.Content("~/Content/img/valid.png")" alt="valid" id="valid" style="display: none" />
            <span id="checkTable"></span>
        </div>
    </div>
    <input type="hidden" name="columns" id="columns" />
    <hr>
}
<table class="table table-striped table-hover table-bordered" id="tblColumns">
    <thead>
        <tr>
            <th data-field="name">Column Name</th>
            <th data-field="display">Display Name</th>
            <th data-field="datatype">Data Type</th>
            <th data-field="size">Size</th>
            <th data-field="nullable" data-checkbox="false">Allows Null</th>
        </tr>
    </thead>
</table>
<div class="row custom-row">
    <button type="button" class="btn btn-primary" id="AddColumn">Add Column</button>
    <button type="button" class="btn btn-primary" id="saveTable">Save</button>
</div>

@Html.Partial("_PopupColumn")

@section scripts
{
    <script src="~/Scripts/Table/createTable.js"></script>
}
