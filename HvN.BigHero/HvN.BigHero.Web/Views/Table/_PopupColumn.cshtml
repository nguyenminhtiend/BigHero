@using HvN.BigHero.Web.Helper
<div class="modal fade" id="formAddColumn">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
                <h4 class="modal-title">Add New Column</h4>
            </div>
            <div class="modal-body">
                <div class="row custom-row">
                    <div class="col-md-4">
                        <label class="mandatory">Column name:</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control mandatory" id="columnName">
                        <span id="checkColumn"></span>
                        <span id="existColumn"></span>
                    </div>
                </div>
                <div class="row custom-row">
                    <div class="col-md-4">
                        <label class="mandatory">Display name:</label>
                    </div>
                    <div class="col-md-6">
                        <input type="text" class="form-control mandatory" id="displayName">
                    </div>
                </div>
                <div class="row custom-row">
                    <div class="col-md-4">
                        <label class="mandatory">Data Type:</label>
                    </div>
                    <div class="col-md-4">
                        @Html.DropDownListForEnum("datatype", "form-control")
                        @*<select class="form-control" id="datatype">
                            <option value="int">int</option>
                            <option value="varchar">varchar</option>
                            <option value="datetime">datetime</option>
                            <option value="bit">bit</option>
                        </select>*@
                    </div>
                    <div class="col-md-2">
                        <input type="text" class="form-control" id="length" readonly>
                        <span id="checkLength"></span>
                    </div>
                </div>
                <div class="row custom-row">
                    <div class="col-md-4">
                        <label>Allow Null:</label>
                    </div>
                    <div class="col-md-6">
                        <input type="checkbox" id="allowNull" />
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="save">Save changes</button>
            </div>
        </div>
    </div>
</div>