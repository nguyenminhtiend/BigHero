@model HvN.BigHero.DAL.Model.TableDetailViewModel
<h3><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> @Model.TableName Management</h3>
    <hr>
    <table class="table table-striped table-hover table-bordered">
        <thead>
            <tr>
                @{
                    foreach (var column in Model.Columns)
                    {
                        <th>@column.Display</th>
                    }
                    <th class="text-center">Action</th>
                }
            </tr>
        </thead>
        <tbody>
            @foreach (var row in Model.Data)
            {
                <tr>
                    @{
                        foreach (var column in Model.Columns.Where(x => !x.IsPrimaryKey))
                        {
                            <td>@row[column.Name]</td>
                        }
                        <td class="text-center">
                            <a class="btn btn-primary btn-xs" href="/Table/Edit/@Model.TableName/@row[Model.PrimaryColumn]">
                                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span> Edit
                            </a>
                            <button type="button" class="btn btn-danger btn-xs" onclick="deleteRow('@Model.TableName', @row[Model.PrimaryColumn])">
                                <span class="glyphicon glyphicon-remove" aria-hidden="true"></span> Delete
                            </button>
                        </td>
                    }
                </tr>
                        }
        </tbody>
    </table>
