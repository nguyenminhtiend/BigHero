@model HvN.BigHero.DAL.Model.TableDetailViewModel
<h3><span class="glyphicon glyphicon-list-alt" aria-hidden="true"></span> @Model.TableName Management</h3>
<hr>
<a class="btn btn-info btn-sm custom-row" href="/Table/Add/@Model.TableName"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Add new @Model.TableName</a>

<div id="tableDetail">
    @Html.Partial("_TableDetail", Model)
</div>

<div id="confirmationDelete" class="modal fade">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title">Delete record!</h4>
            </div>
            <div class="modal-body">
                <div class="container-fluid">
                    <div class="row">
                        <p>Are you sure you want to delete this record!</p>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">No</button>
                <button type="button" class="btn btn-primary" id="deleteRecord">Yes</button>
            </div>
        </div>
    </div>
</div>
@section scripts
{
    <script src="~/Scripts/Table/tableRecord.js"></script>
}
